# ============================================================================
# WDEAF - Local Development Environment
# ============================================================================
# Note: This file is for LOCAL DEVELOPMENT ONLY
# Never commit sensitive data to version control!
# ============================================================================

# Docker Service Ports
DOCKER_FRONTEND_PORT=5173
DOCKER_BACKEND_PORT=8000
DOCKER_POSTGRES_PORT=5432
DOCKER_REDIS_PORT=6379

# Frontend (Vue 3 + Vite)
VITE_BOT_USERNAME=wdeaf_bot
VITE_MINI_APP_SHORT_NAME=wdeaf_app
VITE_DEBUG=true

# Backend (Flask + Uvicorn)
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=app.py

# Telegram Integration (Get from @BotFather)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_BOT_SECRET=YOUR_BOT_SECRET_HERE

# Database (PostgreSQL)
DB_CONNECTION=postgresql
DB_HOST=wdeaf-postgres
DB_PORT=5432
DB_NAME=wdeaf_db
DB_USER=wdeaf_user
DB_PASSWORD=dev_db_password
DB_CHARSET=utf8mb4

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_TIMEOUT=30

# Cache (Redis)
REDIS_HOST=wdeaf-redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password
REDIS_DB=0

# Application Environment
APP_NAME=WDEAF
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# API Configuration
VITE_API_URL=http://localhost:8000
API_CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# Security
JWT_SECRET=dev_jwt_secret_key_not_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Session & CSRF
SESSION_DRIVER=redis
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
CSRF_PROTECTION=true

# Email (Log to console in dev)
MAIL_DRIVER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=no-reply@wdeaf.local
MAIL_FROM_NAME=${APP_NAME}

# Monitoring & Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_MAX_FILES=14

# Development Tools
DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true
QUERY_LOG_SLOW_THRESHOLD=1000

# Feature Flags
FEATURE_TELEGRAM_LOGIN=true
FEATURE_PHONE_AUTH=true
FEATURE_ANALYTICS=false
