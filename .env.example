# ============================================================================
# WDEAF - Telegram Mini App (TMA) Development Configuration
# ============================================================================

# ============================================================================
# Docker Service Ports
# ============================================================================
DOCKER_FRONTEND_PORT=5173
DOCKER_BACKEND_PORT=8000
DOCKER_POSTGRES_PORT=5432
DOCKER_REDIS_PORT=6379

# ============================================================================
# Frontend (Vue 3 + Vite)
# ============================================================================
VITE_BOT_USERNAME=wdeaf_bot
VITE_MINI_APP_SHORT_NAME=wdeaf_app
VITE_DEBUG=true

# ============================================================================
# Backend (Flask + Uvicorn)
# ============================================================================
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=app.py

# ============================================================================
# Telegram Integration
# ============================================================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_BOT_SECRET=YOUR_BOT_SECRET_HERE

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DB_CONNECTION=postgresql
DB_HOST=wdeaf-postgres
DB_PORT=5432
DB_NAME=wdeaf_db
DB_USER=wdeaf_user
DB_PASSWORD=secure_db_password_change_this
DB_CHARSET=utf8mb4

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_TIMEOUT=30

# ============================================================================
# Cache (Redis)
# ============================================================================
REDIS_HOST=wdeaf-redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_DB=0

# ============================================================================
# Application Environment
# ============================================================================
APP_NAME=WDEAF
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# ============================================================================
# API Configuration
# ============================================================================
VITE_API_URL=http://localhost:8000
API_CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# ============================================================================
# Security
# ============================================================================
JWT_SECRET=your_jwt_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# Session & CSRF
# ============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
CSRF_PROTECTION=true

# ============================================================================
# Email (Optional)
# ============================================================================
MAIL_DRIVER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=no-reply@wdeaf.local
MAIL_FROM_NAME=${APP_NAME}

# ============================================================================
# AWS S3 (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_MAX_FILES=14

# ============================================================================
# Development Tools
# ============================================================================
DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true
QUERY_LOG_SLOW_THRESHOLD=1000

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_TELEGRAM_LOGIN=true
FEATURE_PHONE_AUTH=true
FEATURE_ANALYTICS=false
