# ============================================================================
# WDEAF - Telegram Mini App (TMA) Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Frontend (Vue 3 + Vite)
# ----------------------------------------------------------------------------
FRONTEND_PORT=5173
VITE_BOT_USERNAME=wdeaf_bot
VITE_MINI_APP_SHORT_NAME=wdeaf_app
VITE_DEBUG=true
VITE_API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Backend (Django)
# ----------------------------------------------------------------------------
BACKEND_PORT=8000
DJANGO_ENV=development
DJANGO_DEBUG=1
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ----------------------------------------------------------------------------
# PostgreSQL Database
# ----------------------------------------------------------------------------
POSTGRES_PORT=5432
DB_CONNECTION=postgresql
DB_HOST=wdeaf-postgres
DB_NAME=wdeaf_db
DB_USER=wdeaf_user
DB_PASSWORD=secure_db_password_change_this
DB_CHARSET=utf8mb4
DB_ENGINE=django.db.backends.postgresql

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_TIMEOUT=30

# ----------------------------------------------------------------------------
# Redis Cache
# ----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_HOST=wdeaf-redis
REDIS_DB=0

# ----------------------------------------------------------------------------
# Telegram Integration
# ----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_BOT_SECRET=YOUR_BOT_SECRET_HERE

# ----------------------------------------------------------------------------
# Security (JWT)
# ----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ----------------------------------------------------------------------------
# CORS & CSRF
# ----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000
SESSION_DRIVER=redis
SESSION_LIFETIME=86400

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME=WDEAF
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Email (Optional)
# ----------------------------------------------------------------------------
MAIL_DRIVER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=no-reply@wdeaf.local
MAIL_FROM_NAME=${APP_NAME}

# ----------------------------------------------------------------------------
# AWS S3 (Optional)
# ----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_MAX_FILES=14

# ----------------------------------------------------------------------------
# Development Tools
# ----------------------------------------------------------------------------
DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true
QUERY_LOG_SLOW_THRESHOLD=1000

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_TELEGRAM_LOGIN=true
FEATURE_PHONE_AUTH=true
FEATURE_ANALYTICS=false